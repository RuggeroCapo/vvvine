{
  "manifest_version": 3,
  "name": "Amazon Vine Efficiency Enhancer",
  "version": "1.2.0",
  "description": "Enhance Amazon Vine browsing efficiency with title expansion, marking seen items, filtering, keyboard navigation, auto-navigation, and monitoring with notifications",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.com/vine/*",
        "*://www.amazon.com/hz/vine/*",
        "*://www.amazon.co.uk/vine/*",
        "*://www.amazon.co.uk/hz/vine/*",
        "*://www.amazon.de/vine/*",
        "*://www.amazon.de/hz/vine/*",
        "*://www.amazon.fr/vine/*",
        "*://www.amazon.fr/hz/vine/*",
        "*://www.amazon.es/vine/*",
        "*://www.amazon.es/hz/vine/*",
        "*://www.amazon.it/vine/*",
        "*://www.amazon.it/hz/vine/*",
        "*://www.amazon.ca/vine/*",
        "*://www.amazon.ca/hz/vine/*",
        "*://www.amazon.com.au/vine/*",
        "*://www.amazon.com.au/hz/vine/*",
        "*://www.amazon.co.jp/vine/*",
        "*://www.amazon.co.jp/hz/vine/*"
      ],
      "js": [
        "services/items-repository.js",
        "managers/base-manager.js",
        "managers/storage-manager.js",
        "managers/ui-manager.js",
        "managers/seen-items-manager.js",
        "managers/bookmark-manager.js",
        "managers/filter-manager.js",
        "managers/new-items-manager.js",
        "managers/page-detection-manager.js",
        "managers/category-tracker-manager.js",
        "managers/notification-provider-manager.js",
        "managers/monitoring-manager.js",
        "managers/purchase-manager.js",
        "managers/keyboard-manager.js",
        "managers/page-manager.js",
        "content.js"
      ],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icons/icon-48x48.jpg",
    "128": "icons/icon-128x128.jpg"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Amazon Vine Efficiency Enhancer"
  }
} 